{
  "servers": {
    "file-listing-server": {
      "type": "stdio",
      "command": "python",
      "args": [".\\server.py"]
    },
    "file-listing-server-docker": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run", "--rm", "-i",
        "-v", "C:/Users:/host/Users:ro",
        "-v", "C:/:/host/C:ro",
        "mcp-file-server",
        "python", "server.py"
      ]
    }
  }
}
